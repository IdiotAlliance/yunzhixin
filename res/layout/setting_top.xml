<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_top_frame"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:background="@drawable/blue_bottombar" >

    <!-- 左侧按钮 -->

    <com.dt.cloudmsg.component.ImageBtSingle
        android:id="@+id/setting_top_back_btn"
        android:layout_width="48dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/button_top"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/setting_top__span1"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/setting_top_back_btn"
        android:background="@drawable/button_span_vertical" />

    <TextView
        android:id="@+id/setting_top_title_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dip"
        android:layout_toRightOf="@id/setting_top__span1"
        android:text="设置"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>