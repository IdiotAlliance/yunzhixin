<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
        >

    <LinearLayout
            android:id="@+id/item_session_shotcut_new_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            >
        <TextView
                android:id="@+id/item_session_shortcut_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                />
        <TextView
                android:id="@+id/item_session_shorcut_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/dark_gray"
                android:text="@string/click_to_create_session"
                android:paddingLeft="10dp"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="@color/msg_blue"
            >
        <ImageView
                android:layout_height="match_parent"
                android:layout_width="2dp"
                android:background="@drawable/list_span_vertical"/>
        <ImageButton
                android:id="@+id/item_session_shorcut_create_session"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/new_msg"
                />
        <ImageView
                android:layout_height="match_parent"
                android:layout_width="2dp"
                android:background="@drawable/list_span_vertical"/>
        <ImageButton
                android:id="@+id/item_session_shorcut_call"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/make_call"
                />
    </LinearLayout>

</RelativeLayout>